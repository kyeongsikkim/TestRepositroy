<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Connection Pool(DataSource) 설정 -->
	<bean name="dataSource"
			  class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="oracle.jdbc.OracleDriver"/>
		<property name="jdbcUrl" value="jdbc:oracle:thin:@localhost:1521:orcl"/>
		<property name="user" value="iotuser"/>
		<property name="password" value="iot12345"/>
		<property name="maxPoolSize" value="1"/>
		<property name="initialPoolSize" value="1"/>
		<property name="acquireIncrement" value="1"/>
		<property name="minPoolSize" value="1"/>
	</bean>

	<!-- JdbcTemplate 설정 -->
	<bean name="jdbcTemplate"
			  class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource"  ref="dataSource"/>		  
	</bean>
	
	<!-- Mybatis 설정 아무 이름이나 지어도 상관이 없다.-->
	
	<bean name="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
	<property name="dataSource" ref="dataSource"/>
	<!-- 마이바티스 밑에 모든 xml 파일들이다.어떤거하고 매핑하나 확인한다. -->
	<property name="mapperLocations" value="/WEB-INF/mybatis/*.xml"></property>
	</bean>
	<!-- 생성자가 기본생성자가 아니다. 생성자 주입 시켜줘야 한다.sqlSessionFactory 가 만들어준 것을 쓰기 때문에 이것을 참조 해야 된다. -->
	<bean name="sqlSessionTemplate " class="org.mybatis.spring.SqlSessionTemplate">
	<constructor-arg ref="sqlSessionFactory"></constructor-arg>
	</bean>
	
</beans>





